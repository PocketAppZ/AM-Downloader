<Window 
    x:Class="AM_Downloader.MainWindow" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:AM_Downloader" 
    mc:Ignorable="d" 
    Title="AM Downloader" 
    Height="450" 
    Width="800" 
    WindowStartupLocation="CenterScreen">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button 
                    Padding="10" 
                    Content="&#xf067; Add" 
                    FontFamily="{StaticResource FontAwesome}" 
                    x:Name="btnAdd" 
                    Click="btnAdd_Click" />
                <Button 
                    Command="{Binding RemoveCommand}" 
                    CommandParameter="{Binding SelectedItem, ElementName=lvDownload}" 
                    Padding="10" x:Name="btnRemove" 
                    Content="&#xf068; Remove" 
                    FontFamily="{StaticResource FontAwesome}" />
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Button 
                    Padding="10" 
                    Content="&#xf04b; Start" 
                    FontFamily="{StaticResource FontAwesome}" 
                    x:Name="btnStart" 
                    Command="{Binding StartCommand}" 
                    CommandParameter="{Binding SelectedItem, ElementName=lvDownload}" />
                <Button 
                    Padding="10" 
                    Content="&#xf04c; Pause" 
                    FontFamily="{StaticResource FontAwesome}" 
                    x:Name="btnPause" 
                    Command="{Binding PauseCommand}"
                    CommandParameter="{Binding SelectedItem, ElementName=lvDownload}" />
                <Button 
                    Padding="10" 
                    Content="&#xf04d; Cancel" 
                    FontFamily="{StaticResource FontAwesome}" 
                    x:Name="btnCancel" 
                    Command="{Binding CancelCommand}" 
                    CommandParameter="{Binding SelectedItem, ElementName=lvDownload}"  />
            </ToolBar>
        </ToolBarTray>
        <ListView 
            x:Name="lvDownload" 
            Margin="10 10">
            <ListView.Resources>
                <DataTemplate x:Key="Templ">
                    <TextBlock 
                        HorizontalAlignment="Left" 
                        Text="{Binding}" 
                        Padding="5" />
                </DataTemplate>
                <Style x:Key="HeaderStyle" TargetType="GridViewColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                </Style>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource HeaderStyle}" 
                        Header="Name" 
                        DisplayMemberBinding="{Binding ShortFilename}" 
                        Width="200" />
                    <GridViewColumn 
                        Header="Progress" 
                        Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <ProgressBar 
                                        x:Name="pbProgress" 
                                        VerticalAlignment="Stretch" 
                                        MinWidth="150" 
                                        Minimum="0" 
                                        Maximum="100" 
                                        Value="{Binding Progress, Mode=OneWay}" />
                                    <TextBlock 
                                        Text="{Binding ElementName=pbProgress, Path=Value, StringFormat={}{0:0}%}" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource HeaderStyle}" 
                        Header="Size" 
                        DisplayMemberBinding="{Binding TotalBytesToDownload}" 
                        Width="125" />
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource HeaderStyle}" 
                        Header="Downloaded" 
                        DisplayMemberBinding="{Binding BytesDownloadedSoFar}" 
                        Width="125" />
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource HeaderStyle}" 
                        Header="Status" 
                        DisplayMemberBinding="{Binding Status}" 
                        Width="125" />
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource HeaderStyle}" 
                        Header="URL" 
                        DisplayMemberBinding="{Binding Url}"
                        Width="400" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>