<Window 
    x:Class="AMDownloader.MainWindow" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:AMDownloader" 
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
    xmlns:i1="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
    mc:Ignorable="d" 
    Title="AM Downloader"
    MinHeight="450" 
    MinWidth="800" 
    Height="450" 
    Width="800" 
    WindowStartupLocation="CenterScreen">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding WindowClosingCommand, Mode=OneTime}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button 
                    Padding="10" 
                    Content="&#xF067; Add" 
                    FontFamily="{StaticResource FontAwesome}" 
                    x:Name="btnAdd" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    Command="{Binding AddCommand}"  />
                <Button 
                    CommandParameter="{Binding SelectedItems, ElementName=lvDownload}" 
                    Command="{Binding RemoveCommand}" 
                    Padding="10" x:Name="btnRemove" 
                    Content="&#xF068; Remove" 
                    FontFamily="{StaticResource FontAwesome}" />
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Button 
                    Padding="10" 
                    Content="&#xF04B; Start" 
                    FontFamily="{StaticResource FontAwesome}" 
                    x:Name="btnStart" 
                    CommandParameter="{Binding Path=SelectedItems, ElementName=lvDownload}"
                    Command="{Binding StartCommand}"  />
                <Button 
                    Padding="10" 
                    Content="&#xF04C; Pause" 
                    FontFamily="{StaticResource FontAwesome}" 
                    x:Name="btnPause" 
                    CommandParameter="{Binding SelectedItems, ElementName=lvDownload}"
                    Command="{Binding PauseCommand}" />
                <Button 
                    Padding="10" 
                    Content="&#xF00D; Cancel" 
                    FontFamily="{StaticResource FontAwesome}" 
                    x:Name="btnCancel" 
                    CommandParameter="{Binding SelectedItems, ElementName=lvDownload}" 
                    Command="{Binding CancelCommand}"  />
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Button 
                    Padding="10" 
                    Content="&#xF04B; Start Queue" 
                    FontFamily="{StaticResource FontAwesome}" 
                    x:Name="btnStartQueue" 
                    Command="{Binding StartQueueCommand}" />
                <Button 
                    Padding="10" 
                    Content="&#xF04D; Stop Queue" 
                    FontFamily="{StaticResource FontAwesome}" 
                    x:Name="btnCancelQueue" 
                    Command="{Binding StopQueueCommand}" />
            </ToolBar>
        </ToolBarTray>
        <ListView 
            x:Name="lvDownload" 
            Margin="10 10">
            <ListView.Resources>
                <DataTemplate x:Key="Templ">
                    <TextBlock 
                        HorizontalAlignment="Left" 
                        Text="{Binding}" 
                        Padding="5" />
                </DataTemplate>
                <Style x:Key="LeftAligned" TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                </Style>
                <Style x:Key="MiddleAligned" TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
                <Style x:Key="RightAligned" TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Right" />
                </Style>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource LeftAligned}" 
                        Header="Name" 
                        DisplayMemberBinding="{Binding Name}" 
                        Width="250"/>

                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource LeftAligned}" 
                        Header="Status" 
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock 
                                        Text="{Binding Status}" 
                                        HorizontalAlignment="Left" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource MiddleAligned}" 
                        Header="Progress" 
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <ProgressBar 
                                        x:Name="pbProgress" 
                                        VerticalAlignment="Stretch" 
                                        Minimum="0" 
                                        Maximum="100" 
                                        Value="{Binding Progress, Mode=OneWay}" />
                                    <TextBlock 
                                        Text="{Binding Value, ElementName=pbProgress, StringFormat=\{0:0\}%}" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource RightAligned}" 
                        Header="Downloaded" 
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock 
                                        Text="{Binding PrettyDownloadedSoFar}" 
                                        HorizontalAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource LeftAligned}" 
                        Header="Size" 
                        DisplayMemberBinding="{Binding PrettyTotalSize}" 
                        Width="75" />
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource RightAligned}" 
                        Header="Speed" 
                        Width="75">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock 
                                        Text="{Binding PrettySpeed}" 
                                        HorizontalAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource LeftAligned}" 
                        Header="Location" 
                        DisplayMemberBinding="{Binding PrettyDestination}"
                        Width="400" />
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource LeftAligned}" 
                        Header="URL" 
                        DisplayMemberBinding="{Binding Url}"
                        Width="400" />
                    <GridViewColumn 
                        HeaderTemplate="{StaticResource Templ}" 
                        HeaderContainerStyle="{StaticResource RightAligned}" 
                        Header="Created" 
                        Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock 
                                        Text="{Binding DateCreated}" 
                                        HorizontalAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>