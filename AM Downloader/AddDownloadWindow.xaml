<Window x:Class="AM_Downloader.AddDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AM_Downloader"
        mc:Ignorable="d"
        Title="Add URL" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterOwner" 
        ShowInTaskbar="False" 
        ResizeMode="CanResizeWithGrip">
    <Grid 
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label 
            Content="Enter URL or pattern to add. You can enter multiple URLs on separate lines."/>
        <TextBox 
            x:Name="txtUrl" 
            Grid.Row="1" 
            Padding="5" 
            Text="{Binding Path=Urls}" 
            Width="auto" 
            Height="200"
            TabIndex="0" 
            ScrollViewer.CanContentScroll="True" 
            HorizontalScrollBarVisibility="Auto" 
            VerticalScrollBarVisibility="Auto" 
            AcceptsReturn="True"/>
        <WrapPanel 
            Grid.Row="3" 
            HorizontalAlignment="Right">
            <CheckBox 
                x:Name="cbAddToQueue" 
                VerticalAlignment="Center" 
                Content="Add to queue" 
                IsEnabled="False" 
                IsChecked="{Binding Path=AddToQueue}"/>
            <CheckBox 
                x:Name="cbStartDownloadingImmediately" 
                VerticalAlignment="Center" 
                Content="Start downloading immediately" 
                IsChecked="{Binding Path=Start}"/>
            <Button 
                Content="Add" 
                MinWidth="85" 
                Command="{Binding AddCommand}"
                IsDefault="True" 
                TabIndex="1" Click="Button_Click"/>
            <Button 
                Content="Cancel" 
                MinWidth="85" 
                IsCancel="True" 
                TabIndex="2"/>
        </WrapPanel>
    </Grid>
</Window>
