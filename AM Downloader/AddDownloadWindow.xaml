<Window x:Class="AMDownloader.AddDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMDownloader"
        mc:Ignorable="d"
        Title="Add URL" 
        WindowStartupLocation="CenterOwner" 
        ShowInTaskbar="False" 
        ResizeMode="CanResizeWithGrip"        
        MinWidth="640"
        MinHeight="360"
        Width="640"
        Height="360"
        d:DesignHeight="200" WindowStyle="ToolWindow">
    <Grid 
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Label 
            Content="Enter URL or pattern to add. You can enter multiple URLs on separate lines."/>
        <TextBox 
            x:Name="txtUrl" 
            Grid.Row="1" 
            Padding="5" 
            Text="{Binding Path=Urls}" 
            Width="auto" 
            Height="auto"
            TabIndex="0" 
            ScrollViewer.CanContentScroll="True" 
            HorizontalScrollBarVisibility="Auto" 
            VerticalScrollBarVisibility="Auto" 
            AcceptsReturn="True"/>
        <DockPanel
            Grid.Row="3"
            HorizontalAlignment="Stretch">
            <Label 
                DockPanel.Dock="Left" 
                Content="Save to:"/>
            <Button 
                x:Name="btnBrowse" 
                DockPanel.Dock="Right" 
                Content="Browse" 
                Width="100" 
                Click="btnBrowse_Click"/>
            <TextBox 
                Margin="0 0 5 0"
                x:Name="txtDestination"
                Text="{Binding Path=SaveToFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                Width="auto" 
                HorizontalAlignment="Stretch" 
                VerticalContentAlignment="Center" 
                IsReadOnly="True"/>
        </DockPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <CheckBox 
                x:Name="cbAddToQueue" 
                Content="Add to queue" 
                IsChecked="{Binding Path=AddToQueue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                VerticalAlignment="Center"
                Margin="0 0 5 0"
                />
            <CheckBox 
                x:Name="cbStartDownloadingImmediately" 
                Content="Start downloading" 
                IsChecked="{Binding Path=StartDownload, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                VerticalAlignment="Center"
                Margin="0 0 15 0"/>
            <Button x:Name="btnAdd" 
                Margin="0 0 5 0"
                Content="Add" 
                Width="100" 
                Command="{Binding AddCommand}"
                IsDefault="True" 
                TabIndex="1" Click="btnAdd_Click"/>
            <Button
                Margin="0 0 5 0"
                Content="Cancel" 
                Width="100" 
                IsCancel="True" 
                TabIndex="2"/>
            <Button
                Command="{Binding PreviewCommand}"
                Content="Preview" 
                Width="100" 
                TabIndex="3"/>
        </StackPanel>
    </Grid>
</Window>
