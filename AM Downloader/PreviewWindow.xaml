<Window x:Class="AMDownloader.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMDownloader"
        mc:Ignorable="d" Title="Preview" Height="450" Width="644" ShowInTaskbar="False" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="listUrls" Margin="10" Grid.Row="0" />
        <StackPanel Margin="10 0 10 10" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button Content="OK" IsDefault="True" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
